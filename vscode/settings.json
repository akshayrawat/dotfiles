{
  "workbench.colorTheme": "Spinel",
  "files.autoSave": "afterDelay",
  "editor.minimap.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "workbench.iconTheme": "Monokai Pro (Filter Octagon) Icons",
  "workbench.colorCustomizations": {},
  "[ruby]": {

    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.linkedEditing": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ]
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [
    120
  ],
  "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Octagon)",
  "workbench.preferredHighContrastColorTheme": "Monokai Pro (Filter Octagon)",
  "workbench.preferredHighContrastLightColorTheme": "Monokai Pro (Filter Octagon)",
  "editor.fontLigatures": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.startupEditor": "none",
  "git.openRepositoryInParentFolders": "always",
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.erb": "html",
    "*.axlsx": "ruby"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "editor.largeFileOptimizations": false,
  "explorer.autoRevealExclude": {
    "**/.git": true,
    "**/.ruby-lsp": false
  },
  "search.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.ruby-lsp": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.ruby-lsp": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true
  },
  "redhat.telemetry.enabled": true
}
